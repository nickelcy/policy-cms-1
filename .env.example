# Base URL for the DSpace API (no trailing slash).
VITE_API_HOST=https://dspace.nickelcy.com

# Default DSpace scope UUID used to limit search to a specific collection/community.
VITE_DSPACE_SCOPE_UUID=7e5c02a9-d75c-48c4-becd-03b395bd25f3

# Number of items shown in the live suggestion dropdown on the home page.
VITE_SUGGESTION_PAGE_SIZE=5

# Number of items shown per page on the full results page.
VITE_RESULTS_PAGE_SIZE=15

# Number of "recent submissions" shown when no search results are found.
VITE_RECENT_RECOMMENDATION_SIZE=5

# Default sort order for DSpace discover search.
VITE_SEARCH_SORT=dc.date.accessioned,DESC

# Site metadata used in index.html SEO/social tags.
VITE_SITE_NAME=UG Policies
VITE_SITE_TITLE=UG Policies | University of Guyana Policy Search
VITE_SITE_DESCRIPTION=Search and explore University of Guyana policy documents with fast discovery, metadata previews, and direct PDF access.
VITE_SITE_URL=https://policy.nickelcy.com
VITE_OG_IMAGE_URL=https://policy.nickelcy.com/assets/University-of-Guyana-Logo.png

# Comma-separated hostnames allowed by Vite dev server.
VITE_DEV_ALLOWED_HOSTS=policy.nickelcy.com

# Disable HMR websocket in dev to avoid reconnect/reload loops behind some proxies.
VITE_DEV_HMR=false
